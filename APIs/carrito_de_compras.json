{
  "openapi": "3.0.0",
  "info": {
    "title": "Carrito de Compras API",
    "version": "1.0.0",
    "description": "API para la gestión del carrito de compras del e-commerce."
  },
  "servers": [
    {
      "url": "https://localhost:5001/api",
      "description": "Servidor local"
    }
  ],
  "components": {
    "securitySchemes": {
      "OAuth2": {
        "type": "oauth2",
        "flows": {
          "password": {
            "scopes": {
              "readOnly": "read objects in your account"
            },
            "tokenUrl": "https://example.com/oauth/token"
          }
        }
      },
      "apiKey": {
        "type": "apiKey",
        "name": "X-API-Key",
        "in": "header"
      }
    },
    "schemas": {
      "Carrito": {
        "type": "object",
        "properties": {
          "cartId": {
            "type": "string",
            "example": "abc123",
            "pattern": "^[A-Za-z0-9]{6,12}$"
          },
          "userId": {
            "type": "string",
            "example": "000002",
            "pattern": "^[0-9]{6}$"
          },
          "productos": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Producto"
            },
            "maxItems": 100
          }
        },
        "required": [
          "cartId",
          "userId",
          "productos"
        ],
        "additionalProperties": false
      },
      "Producto": {
        "type": "object",
        "properties": {
          "productId": {
            "type": "string",
            "example": "7777",
            "pattern": "^[0-9]{4}$"
          },
          "cantidad": {
            "type": "integer",
            "example": 2
          }
        },
        "required": [
          "productId",
          "cantidad"
        ],
        "additionalProperties": false
      },
      "CarritoResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Carrito creado.",
            "pattern": "^example-[0-9a-z]+$",
            "maxLength": 32
          },
          "cartId": {
            "type": "string",
            "example": "CC1234",
            "pattern": "^[A-Z]{2}[0-9]{4}$"
          }
        },
        "required": [
          "message",
          "cartId"
        ],
        "additionalProperties": false
      },
      "CarritoProductoResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Producto agregado al carrito.",
            "pattern": "^example-[0-9a-z]+$",
            "maxLength": 32
          }
        },
        "required": [
          "message"
        ],
        "additionalProperties": false
      },
      "CarritoVacioResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Carrito vaciado.",
            "pattern": "^example-[0-9a-z]+$",
            "maxLength": 32
          }
        },
        "required": [
          "message"
        ],
        "additionalProperties": false
      },
      "NotFoundResponse": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "example": "Not Found",
            "maxLength": 32,
            "pattern": "^[A-Za-z0-9]{3,10}$"
          }
        },
        "required": [
          "message"
        ],
        "additionalProperties": false
      }
    }
  },
  "security": [
    {
      "OAuth2": []
    }
  ],
  "paths": {
    "/carrito": {
      "get": {
        "summary": "Obtener lista de carritos",
        "description": "Obtiene la lista de carritos del usuario autenticado.",
        "responses": {
          "200": {
            "description": "Lista de carritos",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Carrito"
                  },
                  "maxItems": 100
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundResponse"
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Too many requests. Please try again later.",
                      "maxLength": 32,
                      "pattern": "^[A-Za-z0-9]{3,10}$"
                    }
                  },
                  "required": [
                    "message"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        },
        "security": [
          {
            "OAuth2": []
          }
        ]
      },
      "post": {
        "summary": "Crear carrito vacío",
        "description": "Crea un nuevo carrito vacío para el usuario autenticado.",
        "requestBody": {
          "description": "Datos del usuario",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userId": {
                    "type": "string",
                    "example": "000001",
                    "description": "ID del usuario autenticado",
                    "pattern": "^[0-9]{6}$"
                  }
                },
                "required": [
                  "userId"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Carrito creado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "415": {
            "description": "Unsupported Media Type",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Unsupported media type.",
                      "maxLength": 32,
                      "pattern": "^[A-Za-z0-9]{3,10}$"
                    }
                  },
                  "required": [
                    "message"
                  ],
                  "additionalProperties": false
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                   "message": {
                      "type": "string",
                      "example": "Too many requests. Please try again later.",
                      "maxLength": 32,
                      "pattern": "^[A-Za-z0-9]{3,10}$"
                    }
                  },
                  "required": [
                    "message"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        },
        "security": [
          {
            "OAuth2": []
          }
        ]
      }
    },
    "/carrito/{cartId}": {
      "get": {
        "summary": "Obtener contenido del carrito",
        "description": "Obtiene el contenido del carrito especificado.",
        "parameters": [
          {
            "name": "cartId",
            "in": "path",
            "required": true,
