{
  "openapi": "3.0.0",
  "info": {
    "title": "Métricas API",
    "description": "API para gestionar métricas de rendimiento, clics y visitas del e-commerce.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:3000/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "Metric": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "example": "60c72b2f9b1e8b001c8e4a5d",
            "description": "Identificador único de la métrica",
            "pattern": "^example-[0-9a-z]+$",
            "maxLength": 24
          },
          "type": {
            "type": "string",
            "enum": [
              "performance",
              "clicks",
              "visits"
            ],
            "example": "performance",
            "description": "Tipo de métrica"
          },
          "value": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "example": 95,
            "description": "Valor de la métrica"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "example": "2023-06-24T12:00:00Z",
            "description": "Fecha y hora de la métrica",
            "maxLength": 24
          }
        },
        "additionalProperties": false
      },
      "NewMetric": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": [
              "performance",
              "clicks",
              "visits"
            ],
            "example": "clicks",
            "description": "Tipo de métrica"
          },
          "value": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100,
            "example": 100,
            "description": "Valor de la métrica",
            "format": "int32"
          },
          "timestamp": {
            "type": "string",
            "maxLength": 24,
            "format": "date-time",
            "example": "2023-06-24T12:00:00Z",
            "description": "Fecha y hora de la métrica"
          }
        },
        "additionalProperties": false
      },
      "Error": {
        "type": "object",
        "properties": {
          "message": {
            "type": "string",
            "description": "Mensaje de error",
            "maxLength": 24,
            "pattern": "^[A-Za-z0-9]{3,10}$"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "paths": {
    "/metrics": {
      "get": {
        "summary": "Obtener todas las métricas",
        "description": "Obtiene unalista de todas las métricas disponibles.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "default": {
      "description": "Unexpected error",
      "content": {
        "application/json": {
          "schema": {
            "$ref": "#/components/schemas/Error"
          }
        }
      }
    },
          "200": {
            "description": "Lista de métricas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Metric"
                  },
                  "maxItems": 100
                },
                "example": [
                  {
                    "id": "60c72b2f9b1e8b001c8e4a5d",
                    "type": "performance",
                    "value": 95,
                    "timestamp": "2023-06-24T12:00:00Z"
                  },
                  {
                    "id": "60c72b2f9b1e8b001c8e4a5e",
                    "type": "clicks",
                    "value": 100,
                    "timestamp": "2023-06-24T12:00:00Z"
                  }
                ]
              }
            }
          },
          "401": {
            "description": "No autorizado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "403": {
            "description": "Acceso denegado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "404": {
            "description": "No se encontraron métricas",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          },
          "429": {
            "description": "Demasiadas solicitudes. Intente de nuevo más tarde.",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Error"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Crear una nueva métrica",
        "description": "Crea una nueva métrica con los datos proporcionados.",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/NewMetric"
              },
              "example": {
                "type": "clicks",
                "value": 100,
                "timestamp": "2023-06-24T12:00:00Z"
              }
            }
          }
        },
        "responses": {
          "default": {
