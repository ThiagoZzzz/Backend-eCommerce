{
  "openapi": "3.0.0",
  "info": {
    "title": "Servicios de Pago API",
    "description": "API para la gestión de servicios de pago, permitiendo a los usuarios realizar pagos y obtener detalles de los mismos.",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://localhost:5001/api",
      "description": "Servidor Local"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "tags": [
    {
      "name": "Pagos",
      "description": "Endpoints para realizar pagos y obtener detalles de los mismos."
    }
  ],
  "paths": {
    "/payment": {
      "post": {
        "summary": "Realizar pago",
        "description": "Permite a un usuario realizar un pago proporcionando sus credenciales de pago.",
        "tags": [
          "Pagos"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "requestBody": {
          "description": "Información de pago",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "amount": {
                    "type": "number",
                    "example": 10.99
                  },
                  "paymentMethod": {
                    "type": "string",
                    "enum": [
                      "creditCard",
                      "paypal",
                      "mercadopago"
                    ],
                    "example": "creditCard"
                  },
                  "creditCard": {
                    "type": "object",
                    "properties": {
                      "cardNumber": {
                        "type": "string",
                        "format": "credit-card-number",
                        "example": "4111111111111111"
                      },
                      "expirationDate": {
                        "type": "string",
                        "format": "date",
                        "example": "2025-12-31"
                      },
                      "cvv": {
                        "type": "string",
                        "format": "cvv",
                        "example": "123"
                      }
                    },
                    "required": [
                      "cardNumber",
                      "expirationDate",
                      "cvv"
                    ]
                  },
                  "paypal": {
                    "type": "object",
                    "properties": {
                      "paypalToken": {
                        "type": "string",
                        "example": "paypal-token-123"
                      }
                    }
                  },
                  "mercadopago": {
                    "type": "object",
                    "properties": {
                      "mercadopagoToken": {
                        "type": "string",
                        "example": "mercadopago-token-123"
                      }
                    }
                  }
                },
                "required": [
                  "amount",
                  "paymentMethod"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Pago realizado con éxito",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Pago realizado con éxito."
                    },
                    "transactionId": {
                      "type": "string",
                      "example": "1234567890"
                    }
                  },
                  "description": "Respuesta de pago exitoso"
                }
              }
            }
          },
          "401": {
            "description": "Credenciales de pago inválidas",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Credenciales de pago inválidas."
                    }
                  },
                  "description": "Credenciales de pago inválidas"
                }
              }
            }
          },
          "402": {
            "description": "Error en el pago",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Error en el pago."
                    }
                  },
                  "description": "Error en el pago"
                }
              }
            }
          }
        }
      }
    },
    "/payment/{paymentId}": {
      "get": {
        "summary": "Obtener detalles del pago",
        "description": "Obtiene los detalles del pago especificado.",
        "tags": [
          "Pagos"
        ],
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "in": "path",
            "name": "paymentId",
            "required": true,
            "schema": {
              "type": "string",
              "example": "1234567890"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Detalles del pago",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "paymentId": {
                      "type": "string",
                      "example": "1234567890"
                    },
                    "amount": {
                      "type": "number",
                      "example": 10.99
                    },
                    "paymentMethod": {
                      "type": "string",
                      "example": "creditCard"
                    },
                    "creditCard": {
                      "type": "object",
                      "properties": {
                        "cardNumber": {
                          "type": "string",
                          "format": "credit-card-number",
                          "example": "4111111111111111"
                        },
                        "expirationDate": {
                          "type": "string",
                          "format": "date",
                          "example": "2025-12-31"
                        },
                        "cvv": {
                          "type": "string",
                          "format": "cvv",
                          "example": "123"
                        }
                      },
                      "required": [
                        "cardNumber",
                        "expirationDate",
                        "cvv"
                      ]
                    },
                    "paypal": {
                      "type": "object",
                      "properties": {
                        "paypalToken": {
                          "type": "string",
                          "example": "paypal-token-123"
                        }
                      }
                    },
                    "mercadopago": {
                      "type": "object",
                      "properties": {
                        "mercadopagoToken": {
                          "type": "string",
                          "example": "mercadopago-token-123"
                        }
                      }
                    }
                  },
                  "description": "Detalles del pago"
                }
              }
            }
          },
          "404": {
            "description": "Pago no encontrado",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Pago no encontrado."
                    }
                  },
                  "description": "Pago no encontrado"
                }
              }
            }
          }
        }
      }
    }
  }
}
