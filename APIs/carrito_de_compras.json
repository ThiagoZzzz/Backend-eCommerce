                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundResponse"
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Too many requests. Please try again later.",
                      "maxLength": 32,
                      "pattern": "^[A-Za-z0-9]{3,10}$"
                    }
                  },
                  "required": [
                    "message"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        },
        "security": [
          {
            "OAuth2": []
          }
        ]
      },
      "delete": {
        "summary": "Vaciar carrito",
        "description": "Vacía el carrito especificado.",
        "parameters": [
          {
            "name": "cartId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "abc123",
              "pattern": "^[A-Za-z0-9]{6,12}$"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Carrito vaciado",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoVacioResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundResponse"
                }
              }
            }
          },
          "429": {
            "description": "Too Many Requests",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Too many requests. Please try again later.",
                      "maxLength": 32,
                      "pattern": "^[A-Za-z0-9]{3,10}$"
                    }
                  },
                  "required": [
                    "message"
                  ],
                  "additionalProperties": false
                }
              }
            }
          }
        },
        "security": [
          {
            "OAuth2": []
          }
        ]
      }
    },
    "/carrito/{cartId}/producto": {
      "post": {
        "summary": "Agregar producto al carrito",
        "description": "Agrega un producto al carrito especificado.",
        "parameters": [
          {
            "name": "cartId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string",
              "example": "abc123",
              "pattern": "^[A-Za-z0-9]{6,12}$"
            }
          }
        ],
        "requestBody": {
          "description": "Datos del producto a agregar",
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "productId": {
                    "type": "string",
                    "example": "1111",
                    "description": "ID del producto a agregar",
                    "pattern": "^[0-9]{4}$"
                  },
                  "cantidad": {
                    "type": "integer",
                    "example": 2,
                    "default": 1,
                    "description": "Cantidad del producto a agregar",
                    "minimum": 1,
                    "maximum": 10,
                    "format": "int32"
                  }
                },
                "required": [
                  "productId",
                  "cantidad"
                ],
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Producto agregado al carrito",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoProductoResponse"
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "403": {
            "description": "Forbidden",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "406": {
            "description": "Not Acceptable",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/CarritoResponse"
                }
              }
            }
          },
          "404": {
            "description": "Not Found",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/NotFoundResponse"
                }
              }
            }
          },
          "415": {
